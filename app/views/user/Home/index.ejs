</section>

<section class="products" id="products">
  <div class="swiper product-slider">
    <div class="swiper-wrapper">
      <% products.forEach((product)=> { %>
      <div class="swiper-slide box">
        <img src="images/<%= product.img %>" class="card-img-top" height="200px">
        <h3><%= product.name %></h3>
        <a class="btn" href="#categories">shop now</a>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<section class="categories" id="categories">
  <div id="box">
    <% typeProducts.forEach((item) => { %> 
    <a class="btn" href="/?typeProductId=<%= item.id %>#categories"><%= item.type %></a>
  <% }) %>
  </div>
  <div id="box">
    <% groupProducts.forEach((item) => { %> 
    <a class="btn" href="/?groupProductId=<%= item.id %>#categories"><%= item.name %></a>
  <% }) %>
  </div>
  <div class="box-container">
    <% products.forEach((product)=> { %>
    <div class="box">
      <img src="images/<%= product.img %>" class="card-img-top" height="200px">
        <h3><%= product.name %></h3>
        <div class="price">$<%= product.price %></div>
        <div>
          <a class="btn" href="/seeproduct/<%= product.id %>"> <span class="material-icons material-icons-sharp">description</span> รายละเอียด</a>
        </div>
        <% if (product.stock > 0 ) { %>
          <a class="btn" href="/addToCart/<%= product.id %>"> <span class="material-icons material-icons-sharp">add_shopping_cart</span> เพิ่มลงตะกร้า</a>
      <% } %>
      <% if (product.stock == 0 ) { %>
        <a class="btn"><span class="material-icons material-icons-sharp">production_quantity_limits</span>สินค้าหมด</a>
    <% } %>
    </div>
    <% }) %>
  </div>
</section>





<%- include('../pageFooter') %>


