<%- include('../header') %>
<main>
    <div class="adduser">
    <form method="post">
                <h1>เพิ่มรายการ หมวดหมู่สินค้า</h1>
                <div class="input-group">
                    <div class="input-field">
                     <input type="text" name="type" placeholder="type" value="<%= typeProduct.type %>" />
                </div>
                <div class="btn">
                    <button type="submit" class="btns">
                        Add
                    </button>
                </div>
            </div>
    </form>
    </div>
</main>
<div class="showalert">
    <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert" id="alert">
                <%= error.msg %>
            </div>
        <% }) %>
    <% } %>
</div>
