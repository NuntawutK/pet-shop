<%- include('../pageHeader') %>
<section id="blog"> 
    <div class="blog-heading">
        <span>Our Recent Posts</span>
        <h3>Our Blog</h3>
    </div>

    <div class="blog-container">
        <% blogs.forEach((blog)=> { %>
        <div class="blog-box">
            <div class="blog-img">
                <img src="designimg/<%= blog.img %>" alt="Blog">
            </div>
            <div class="blog-text">
                <span><%= dayjs(blog.date).format(dayFormat) %></span>
                <h1 class="blog-title"><%= blog.title %></h1>
                <a href="/contentblog/<%= blog.id %>">Read More</a>
            </div>
        </div>
        <% }) %>
    </div>
</section>
<%- include('../pageFooter') %>